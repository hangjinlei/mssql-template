{
	"name": "mssql",
	"dockerComposeFile": "docker-compose.yml",
	"service": "mssql",
	"workspaceFolder": "/workspaces/mssql/",
	"shutdownAction": "stopCompose",
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		1433
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "waitFor": "onCreateCommand",
	// "postCreateCommand": "bash /workspaces/mssql/.devcontainer/mssql/installSQLtools.sh && apt-get clean -y && rm -rf /var/lib/apt/lists/* /tmp/library-scripts",
	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "root",
	"features": {
		"ghcr.io/devcontainers/features/git": {}
	},
	// "postCreateCommand": "",
	"customizations": {
		"vscode": {
			"extensions": [
				// Microsoft Official
				"ms-vscode.remote-repositories",
				"ms-vscode.vs-keybindings",
				"ms-vsliveshare.vsliveshare-pack",
				"ms-edgedevtools.vscode-edge-devtools",
				"ms-vscode.live-server",
				"visualstudioexptteam.vscodeintellicode",
				"visualstudioexptteam.intellicode-api-usage-examples",
				// GitHub
				"github.codespaces",
				"github.copilot",
				"github.github-vscode-theme",
				"github.remotehub",
				"github.vscode-pull-request-github",
				// Common
				"editorconfig.editorconfig",
				"vscode-icons-team.vscode-icons",
				"alexcvzz.vscode-sqlite",
				"donjayamanne.githistory",
				"esbenp.prettier-vscode",
				"qwtel.sqlite-viewer",
				// Markdown
				// "DavidAnson.vscode-markdownlint",
				"redhat.vscode-yaml",
				"bierner.github-markdown-preview",
				"shd101wyy.markdown-preview-enhanced",
				"streetsidesoftware.code-spell-checker",
				"yzhang.markdown-all-in-one",
				// MSSQL
				"ms-mssql.mssql"
			],
			"settings": {
				"editor.accessibilitySupport": "on",
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"editor.formatOnType": true,
				"editor.inlineSuggest.enabled": true,
				"editor.linkedEditing": true,
				"editor.rulers": [
					120
				],
				"editor.unicodeHighlight.nonBasicASCII": false,
				"files.autoSave": "onFocusChange",
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true,
				"github.copilot.enable": {
					"*": true,
					"yaml": true,
					"plaintext": true,
					"markdown": true
				},
				"javascript.format.semicolons": "insert",
				"notebook.lineNumbers": "on",
				"typescript.format.semicolons": "insert",
				"window.commandCenter": true,
				"window.menuBarVisibility": "classic",
				"workbench.colorTheme": "GitHub Light Colorblind (Beta)",
				"[markdown]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[json]": {
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"[jsonc]": {
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"[typescript]": {
					"editor.defaultFormatter": "vscode.typescript-language-features"
				},
				"[html]": {
					"editor.defaultFormatter": "vscode.html-language-features"
				},
				"[scss]": {
					"editor.defaultFormatter": "vscode.css-language-features"
				},
				"[javascript]": {
					"editor.defaultFormatter": "vscode.typescript-language-features"
				},
				"[css]": {
					"editor.defaultFormatter": "vscode.css-language-features"
				},
				"mssql.connections": [
					{
						"server": "localhost,1433",
						"database": "",
						"authenticationType": "SqlLogin",
						"user": "sa",
						"password": "P@ssw0rd",
						"emptyPasswordInput": false,
						"savePassword": false,
						"profileName": "mssql-container"
					}
				]
			}
		}
	}
}
